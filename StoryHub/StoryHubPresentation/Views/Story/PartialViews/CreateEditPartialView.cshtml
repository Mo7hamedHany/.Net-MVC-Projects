@using BLL.Repositories.Classes
@using BLL.Repositories.Interfaces

@model StoryVm

@inject IStoryTellers _storyTellerRepo

@{
    var tellers = new SelectList(await _storyTellerRepo.GetAllAsync(), "Id", "Name");
}
<input hidden asp-for="@Model.ImageName" />
<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Image"></label>
    <input class="form-control" asp-for="Image" />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Description"></label>
    <input class="form-control" asp-for="Description" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Rating"></label>
    <input class="form-control" asp-for="Rating" />
    <span asp-validation-for="Rating" class="text-danger"></span>
</div>
 <div class="form-group">
    <label class="col-form-label" asp-for="Teller"></label>
    <select class="form-control", asp-for="TellerId" asp-items="@tellers">
        <option value="@null">-- Select Story --</option>
    </select>
</div> 