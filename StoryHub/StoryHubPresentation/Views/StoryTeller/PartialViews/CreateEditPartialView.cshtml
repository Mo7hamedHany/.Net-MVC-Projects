@using BLL.Repositories.Classes
@using BLL.Repositories.Interfaces

@model StoryTellerVm

@inject IStoryTellers _storyTellerRepo

@{
    var departments = new SelectList(await _storyTellerRepo.GetAllAsync(), "Id", "Name");
}
<input hidden asp-for="@Model.ImageName" />
<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Image"></label>
    <input class="form-control" asp-for="Image" />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input class="form-control" asp-for="Age" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Rating"></label>
    <input class="form-control" asp-for="Rating" />
    <span asp-validation-for="Rating" class="text-danger"></span>
</div>
