@model StoryTellerVm
@{
    ViewData["Title"] = "Details";
}

<form>
    <input hidden asp-for="@Model.ImageName" />
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input readonly class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Image"></label>
        <input readonly class="form-control" asp-for="Image" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input readonly class="form-control" asp-for="Age" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Rating"></label>
        <input readonly class="form-control" asp-for="Rating" />
    </div>
    <br />
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <button asp-action="Index" class="btn btn-primary" type="submit">Back</button>
    </div>
</form>

